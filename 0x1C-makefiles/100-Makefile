CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	
main.o : main.c m.h
	$(CC) -c main.c

school.o : school.c m.h
	$(CC) -c school.c
	
clean : 
	$(RM) $(NAME)
	$(RM) *~ \#*\# *.swp
	
oclean:
	$(RM) main.o school.o
	
fclean : clean oclean 

re : fclean all

.PHONY : all clean fclean oclean re
